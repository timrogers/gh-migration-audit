{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "outDir": "./dist", 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "moduleResolution": "Node",
  },
  "include": ["./src", "./test", "./script", "jest.config.ts"],
  "exclude": ["node_modules"]
}